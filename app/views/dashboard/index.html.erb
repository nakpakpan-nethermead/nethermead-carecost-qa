<header>
  <div class="navbar navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">
          <img src="/assets/logo.png"> <span>NALC</span> HEALTH BENEFIT PLAN
        </a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="user-email">
            <% if current_user %>
            <a href="#"><%= current_user.email %> </a>
            <a id="logOut" data-method="delete" href="/users/sign_out" rel="nofollow">Logout
            </a>
            <% end %>
          </li>
          <li class="user-pic"><a href="#"><i class="glyphicon glyphicon-user"></i></a></li>
        </ul>
      </div>
    </div>
    <div class="border">
    </div>
    <div class="container">
      <div class="navbar-collapse collapse sub-header">
        <ul class="nav navbar-nav">
          <li><a><input type="text" placeholder="Search"></a></li>
          <li class="subheader-folder"><a href="#"><img src="/assets/add-folder.png"></a></li>
          <li class="subheader-folder" data-toggle="popover" data-contentId="searchPopContent"><a href="#"><i class="icon-box-add"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</header>
<main class="container">
  <!-- My Medical Conditions -->
  <div class="content-header">
    <div class="menu-icon">
      <img src="/assets/stethoscope.png">
    </div>
    <div class="content-title">
      MY MEDICAL CONDITIONS
    </div>
    <div class="menu-icon-2" id="conditionSetting">
      <input type="checkbox" name="searchDiagnosis" id="searchDiagnosis"> Diagnosis
      <input type="checkbox" name="searchProcedure" id="searchProcedure"> Procedure
    </div>
  </div>
  <div class="search-bar" ng-controller="conditionController">
    <input id="medicalCondition" placeholder="Type your Condition" />
    <input ng-show="0" id="procedureId" ng-model="newProcedure">
    <button class="btn btn-success" id="procedure-btn" ng-click="add()">Add Procedure</button>
  </div> <!-- My medical conditions -->

  <!-- My Insurance status -->
  <div class="content-header">
    <div class="menu-icon">
      <img src="/assets/insurance.png">
    </div>
    <div class="content-title">
      MY INSURANCE STATUS
    </div>
  </div>
  <div class="status-box">
    <div class="row">
      <div class="col-lg-3">
        <div class="total-ded">
          <div class="title">
            Total Deductible
          </div>
          <div class="amount">
            $0
          </div>
          <div class="slider-range" max="10000" prefix="$">
          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="ded-date">
          <div class="title">
            Deductible Paid-To-Date
          </div>
          <div class="amount">
            $0
          </div>
          <div class="slider-range" max="10000" prefix="$">
          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="copay">
          <div class="title">
            Copay
          </div>
          <div class="amount">
            $0
          </div>
          <div class="slider-range" max="100" prefix="$">
          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="coinsurance">
          <div class="title">
            Coinsurance
          </div>
          <div class="amount">
            0%
          </div>
          <div class="slider-range" max="100" prefix="%">
          </div>
        </div>
      </div>
    </div>
  </div> <!-- Insurance status -->

  <!-- My procedures -->
  <div class="content-header" id="myProDiv">
    <div class="menu-icon">
      <img src="/assets/procedures.png">
    </div>
    <div class="content-title">
      MY PROCEDURES
    </div>
    <div class="content-view" ng-controller="cityController">
      <button class="btn btn-default procedureView" data-show="list-view">List view</button>
      <button class="btn btn-default procedureView" data-show="map-view">Map view</button>
      <input type="text" id="cityComplete" ng-model="autoLocation" placeholder="State / City / Zip">
      <input ng-show="0" id="newLocation" ng-model="newLocation">
      <input ng-show="0" id="newLocationType" ng-model="newLocationType">
      <input type="submit" value="+" ng-click="add()">
    </div>
  </div>
  
  <!-- list view -->
  <div class="list-view procedureLayout"  ng-controller="procedureController">
    <div class="table-responsive content-body">
      <table class="table" id="procedureTable">
        <tr>
          <th>Labs</th>
          <th>Provider</th>
          <th>Facility</th>
        </tr>
        <tr ng-repeat="procedure in procedures track by $index">
          <td class="labs">
            <label for="{{procedure.id}}">{{ procedure.name }}</label>
          </td>
          <td>
            <select ng-model="procedure.current_network" ng-change="filter($index)" >
              <option ng-repeat="network in procedure.all_networks" value="{{network}}">{{network}}</option>
            </select>
          </td>
          <td>
            <select ng-model="procedure.current_facility" ng-change="filter($index)">
              <option ng-repeat="facility in procedure.all_facilities" value="{{facility}}">{{facility}}</option>
            </select>
          </td>
        <tr>
      </table>
      <div class="overflowScroll table-responsive">
        <table id="costTable">
          <tr>
            <th class="avg-cost-heading">Average Cost</th>
            <th class="zip-cost-heading" ng-repeat="city in cities track by $index">
               {{city.data}},{{city.dataDisType}}
              <a href="" ng-click="cityDestroy($index+1)"><i class="fa fa-trash-o"></i></a>
            </th>
          </tr>
          <tr ng-repeat="procedure in procedures track by $index">
            {{ procedure }}
            <td class="avg-cost" ng-repeat="c in procedure.charge track by $index">  ${{c}}
            </td>
            <td><i class="fa fa-trash-o deleteMyProcedure" ng-click="destroy($index)"></i></td>
          </tr>
        </table>
      </div>
    </div> <!-- my procedures -->
  </div> <!-- list-view -->

  <!-- map-view -->
  <div class="map-view procedureLayout">
    <div class="row">
      <div class="col-lg-6">
        <div class="map-display">
          <img src="/assets/ny.png">
        </div>
      </div>
      <div class="col-lg-6">
        <div class="map-view-table table-responsive">
          <table class="table">
            <thead>
              <th colspan="3"> My Procedures</th>
            </thead>
            <tbody>
              <tr>
                <td class="labs"><input type="checkbox" class="style-check" id="Eyesight-testing" /> <label for="Eyesight-testing">Eyesight testing</label></td>
                <td><select><option value="volvo">In-Network</option></select></td>
                <td><select><option value="volvo">Office Visit</option></select></td>
              </tr>
              <tr>
                <td class="labs"><input type="checkbox" class="style-check"  id="Eyesight-testing" /> <label for="Eyesight-testing">Eyesight testing</label></td>
                <td><select><option value="volvo">In-Network</option></select></td>
                <td><select><option value="volvo">Office Visit</option></select></td>
              </tr>
            </tbody>
          </table>
        </div> <!-- map-view-table -->
        <div class="criteria-zipcode">
          <div class="row">
            <div class="col-lg-6">
              <div class="criteria-cost">
                <div class="criteria-heading">
                  My Most Criteria
                </div>
                <div class="criteria-fields">
                  <span>
                    <input type="checkbox" class="style-check"  id="my-cost" /> <label for="my-cost">My Cost</label>
                  </span>
                  <span>
                    <input type="checkbox" class="style-check"  id="avg-cost" /> <label for="avg-cost">Average Cost</label>
                  </span>
                </div>
                <div class="criteria-slider">
                  <div class="slider-heading">
                    Cost
                  </div>
                  <div class="slider-range-cost">
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="location">
                <div class="location-heading">
                  Location
                </div>
                <div class="zipcode">
                  <input type="text" placeholder="ZIP">
                </div>
                <div class="zip-sug">
                  <div><span class="zip">10010</span>&nbsp; <i class="fa fa-trash-o"></i></div>
                  <div><span class="zip">11215</span>&nbsp; <i class="fa fa-trash-o"></i></div>
                  <div><span class="zip">10215</span>&nbsp; <i class="fa fa-trash-o"></i></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- map-view -->

  <!-- Recommended Physicians -->
  <div class="content-header">
    <div class="menu-icon">
      <img src="/assets/physicians.png">
    </div>
    <div class="content-title">
      RECOMMENDED PHYSICIANS
    </div>
    <div class="content-view physicians">
      <button class="btn btn-default"> In-Network
      </button>
      <button class="btn btn-default"> Out-Of-Network
      </button>
      <button class="btn btn-default"> My Favorite
      </button>
    </div>
  </div>





  <div class="physician-selection" ng-controller="physicianController">
    <div ng-hide="physicians.length" class="noPhysician">
      Please add some procedure.
    </div>
    <div class="selection-items" ng-show="physicians.length">
      <ul>
        <li>Quality of Care &nbsp;<i class="fa fa-caret-down"></i></li>
        <li>Location ( <span>10010</span> ) &nbsp;<i class="fa fa-caret-down"></i></li>
        <li>Cost &nbsp;<i class="fa fa-caret-down"></i></li>
        <li>Physician Name &nbsp;<i class="fa fa-caret-down"></i></li>
        <li> 
          <select name="physicianProcedure" class="selectpicker"  ng-model="myphyPro" ng-change="updatePhysician()">
            <option ng-repeat="procedure in procedures" value="{{procedure.id}}">
              {{procedure.name}}
            </option>
          </select>
        </li>
      </ul>
    </div>
    <div class="physician-list">
      <div class="physician-available">
        <div class="row">
          <div class="col-lg-4 col-md-4 clo-xs-6" ng-repeat="physician in physicians track by $index">
            <div class="physician-details" id="f{{$index}}">
              <div class="row">
                <div class="col-lg-4 details-col">
                  <div class="profile-pic">
                    <img src="/assets/{{physician.img_url}}">
                  </div>
                  <div class="physician-name">
                    Dr. {{physician.first_name}}
                  </div>
                </div>
                <div class="col-lg-8 details-col">
                  <div class="profile-content">
                    <ul>
                      <li><span class="profile-fields">Speciality :</span> {{physician.provider_type}} </li>
                      <li><span class="profile-fields">Years In Practice :</span> From {{physician.physician_since}} </li>
                      <li><span class="profile-fields">Location :</span> {{physician.provider_address}} </li>
                      <li><span class="profile-fields">My Estimated Cost :</span> $240 </li>
                      <li><span class="profile-fields">NCQA Rating :</span> 
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                      </li>
                    </ul>
                  </div>
                  <div class="profile-icons">
                    <a href=""><i class="fa fa-heart"></i></a>
                    <a href="" ng-click="flipGraph($index)"><img src="/assets/growth.png"></a>
                  </div>
                </div>
              </div>
              <div class="physician-map">
                <img src="/assets/map.png">
              </div>
            </div> <!-- physician details -->
            <div class="physician-details performance-info hide" id="b{{$index}}">
              <div class="row">
                <div class="col-lg-10">
                  <div class="physician-name">
                    Dr. {{physician.first_name}}'s Performance
                  </div>
                  <div class="profile-content">
                    <ul>
                      <li><span class="profile-fields">NALC Member Patients :</span> 2 </li>
                      <li><span class="profile-fields">Other Helpful Data Point :</span> 17 </li>
                      <li><span class="profile-fields">Other Helpful Data Point :</span> 17 </li>
                      <li><span class="profile-fields">Other Helpful Data Point :</span> 17 </li>
                    </ul>
                  </div>
                </div>
                <div class="col-lg-2">
                  <div class="profile-icons">
                    <a href="" class="active"><i class="fa fa-heart"></i></a>
                    <a href=""><i class="icon-user" ng-click="flipGraph($index)"></i></a>
                  </div>
                </div>
              </div>
              <div class="performance-graph">
                <img src="/assets/performance-graph.png">
              </div>
            </div> <!-- physician details -->
          </div>
        </div> <!-- row -->
      </div> <!-- physician available -->
    </div> <!-- physician-list -->
  </div> 
  <!-- Recommended Physicians -->
</main>

